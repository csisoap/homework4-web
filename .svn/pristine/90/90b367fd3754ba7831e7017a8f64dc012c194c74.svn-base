body {
    background-color: #F1F1F1;
}

* {
    font-family: Calibri, serif;
}

.row {
   display: flex;
}

.header {
    margin-left: auto;
    margin-right: auto;
    width: 80%;
    height: 20px;
    margin-bottom: 40px;
}


.content-1 {
    width: 30%;
    margin-right: 20px;
    padding: 15px;
    height: 50%;
    display: inline;
    background-color: white;
}

.content-2 {
    width: 60%;
    padding: 15px;
    height: 100%;
    display: inline;
    background-color: white;
}

#logo {
    float: right;
}

.footer {
    width: 100%;
    height: 60px;
    text-align: center;
    color: gray;
    background-color: black;
    padding: 10px 0 10px 0;
}

#emailtext, textarea {
    width: 100%;
}

#submittext {
    width: 130px;
    height: 60px;
    background-color: blue;
    color: white;
    padding: 10px;
}

@media only screen and (max-width: 768px) {
    [class*="content-"] {
        width: 100%;
    }
}